<%= provide(:title, @user.name.capitalize)%>
<div class="profile">
	
	<div class= "profile-box">
		<div class="photo-count"><p style="font-size: 25px; padding: 5px 0px 0px 25px;"><%= @user.uploads.count %></p>
			<p style="font-size: 20px; padding: 0px 0px 0px 10px;">Photos</p>
			 
		</div>
		<div class="user_pic">
		<% @user_uploads.each do |up| %>
			 <%= link_to image_tag(up.picture.url(:thumb)), up , {:class => "img_user"}, {:title => " #{up.title} "} %>
			 <% end %>
			 <div class="user-paginate">
			 <%= paginate @user_uploads, :outer_window => 3 %>
			 </div>
		</div>

		<h1>
			<%= @user.name.capitalize %>'s Photos 
		</h1> 
		<p>

		</p>
		
	
		<% if @user.avatar_file_name.blank? %>

		<%= image_tag "profile-pic.jpg", :class => "profile-pic" %>

		<% else %>
		
		<%= image_tag @user.avatar.url(:small), :class => "profile-pic" %>

		<% end %>
		
		<h4>
			Joined <%= l @user.created_at, :format => :long %>
		</h4>
	
	
		<div class="profile-font"> 
		 <b>facebook link: <a href="<%=@user.facebook_link %>" target="_blank"><%=@user.facebook_link%></a></b><br><br>
		 <b>website link: <a href="<%= @user.website_link %>" target="_blank"><%=@user.website_link %></a></b>

		</div>
		
		<div class="black-line">
		</div>
		
		<div class= "bio-box">
		 <h3>Bio:</h3>
		 	<p>
			 <%= @user.bio %>
			</p>
		</div>
			<div class="user-showad">
    
 		 </div>
	</div>
</div>